<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/images/logoCouleur.svg') }}" type="image/svg+xml">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li>
                        <a href="{{ path("articles_list") }}">Les mod√®les</a>
                    </li>
                    <li>
                        <a href="{{ path("user_current_profile") }}">Mon profil</a>
                    </li>
                    <li>
                        <a href="{{ path("login") }}">Login</a>
                    </li>
                    <li>
                        <a href="{{ path("user_logout") }}">Deconnexion</a>
                    </li>
                    <li>
                        <form method="get" action="{{ path("user_search") }}">
                            <input type="text" placeholder="Rechercher" name="search" id="search">
                        </form>
                    </li>
                </ul>
            </nav>
        </header>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{message}}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
